<div class="contact" id="contact">
    <div class="top-content">
        <h1>Get in touch.</h1>
        <h1>Let's work together.</h1>
    </div>
    <h2><div class="title">Contact</div></h2>
    <div class="contact-container">
        <div class="contact-container-box">
            <div class="left-text">
                <h3>Inquiries:</h3>
                <p>Please fill out the form on the right or email me directly at rproshan11@gmail.com.</p>
                <p>(Do check Spam folders for my response)</p>
            </div>
            {{!-- Bootsrap form with modifications --}}
            <div class="frm">
                <form class="frm-content">

                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="email">Email address*</label>
                        <input type="email" id="email" class="form-control" required/>
                    </div>

                    <!-- subject input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="subject">Subject*</label>
                        <input type="text" class="form-control" id="subject" rows="4" required>
                    </div>

                    <!-- Name input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="body">Description*</label>
                        <textarea id="body" class="form-control" rows="4" required /></textarea>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" class="btn btn-block mb-4">Send</button>
                </form>
            </div>
        </div>
    </div>
</div>